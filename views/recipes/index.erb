<div class="pagecontents">
<h1>From My Kitchen</h1>

<div>
  <% if @page_no > 1 %>
    <a href="/recipes?page=<%= @page_no - 1 %>&order=<%= @order_param %>">Previous</a>
  <% end %>
  <% if @page_no < @last_page %>
    <a href="/recipes?page=<%= @page_no + 1 %>&order=<%= @order_param %>">Next</a>
  <% end %>
</div>

  <ul>
    <% @recipes.each do |recipe| %>
      <li><a href="/recipes/<%= recipe["id"] %>"><%= recipe["name"] %></a>
      </li>
    <% end %>
  </ul>
